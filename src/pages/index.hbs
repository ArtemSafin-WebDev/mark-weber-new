{{#extend "layout"}}
{{#content "main"}}

<section class="intro">
    <div class="container">
        <div class="intro__content">
            <div class="intro__slogan">
                <p>
                    Делаем мир комфортным местом через создание полезных и удобных digital сервисов
                </p>
            </div>
            <h3 class="intro__services">
                Сайты<br>
                Приложения <br>
                Экспертиза
            </h3>
            <a href="#" class="intro__scroll-down-link">
                <svg width="24" height="24" aria-hidden="true" class="icon-scroll-down">
                    <use xlink:href="#scroll-down" />
                </svg>
            </a>
            <div class="intro__slider">
                <div class="intro__slider-content">
                    <div class="intro__slider-cards">
                        <div class="intro__slider-card">
                            <img src="img/iphone.png" alt="" class="intro__slider-card-image"
                                style="transform: translate(25%, 12%);">
                            <div class="intro__slider-card-type">
                                <div class="intro__slider-card-category">
                                    Свежий проект
                                </div>
                                <div class="intro__slider-card-subject">
                                    Образование
                                </div>
                            </div>
                            <h4 class="intro__slider-card-name">
                                Прородительство
                            </h4>

                        </div>
                    </div>
                    <div class="intro__slider-pagination">
                        <div class="intro__slider-pagination-bullet">

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>


